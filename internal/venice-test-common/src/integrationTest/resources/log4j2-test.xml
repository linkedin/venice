<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p] %c{1} - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Set root logger to ERROR to suppress most logs -->
        <Root level="ERROR">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- Enable Venice logs at INFO or DEBUG level -->
        <Logger name="com.linkedin.venice" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="com.linkedin.davinci" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Suppress noisy third-party libraries -->
        <Logger name="org.apache.kafka" level="WARN"/>
        <Logger name="org.apache.helix" level="WARN"/>
        <Logger name="org.apache.zookeeper" level="ERROR"/>
        <Logger name="io.netty" level="WARN"/>
        <Logger name="com.linkedin.d2" level="WARN"/>
        <Logger name="org.apache.avro" level="WARN"/>
        <Logger name="org.apache.samza" level="WARN"/>
        <Logger name="kafka" level="WARN"/>
        <Logger name="state.change.logger" level="WARN"/>
        <Logger name="org.reflections" level="ERROR"/>
    </Loggers>
</Configuration>